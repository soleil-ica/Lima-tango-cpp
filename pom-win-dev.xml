        </dependency>

        <dependency>
          <groupId>org.zeromq</groupId>
          <artifactId>zeromq-${aol}-shared-release</artifactId>
          <version>${ZEROMQ.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.soleil.lib</groupId>
            <artifactId>LimaCore-${aol}-shared-${mode}</artifactId>
